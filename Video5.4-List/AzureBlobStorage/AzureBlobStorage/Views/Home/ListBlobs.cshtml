@model IEnumerable<string>
@{
    ViewData["Title"] = "ListBlobs";
}

<h1 class="display-6">Lista de Blobs</h1>
<div class="mb-3">
	<a asp-action="UploadBlob" class="btn btn-primary">Efetuar Upload de um Blob</a>
</div>
<hr />

@if (Model.Count() > 0)
{
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="col-sm-2">				
				<img src="@item" class="img-fluid" width="150" />				
			</div>
		}
	</div>
}
else
{
	<div class="alert alert-warning" role="alert">
		Nenhum blob disponível para exibição
	</div>
}

</div>