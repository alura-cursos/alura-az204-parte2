@model IEnumerable<Curso>
@{
    ViewData["Title"] = "ListAllItems";
}

<h1 class="display-6">Lista de Cursos</h1>
<div class="mb-3">
	<a asp-action="CreateItem" class="btn btn-primary">Novo Curso</a>
</div>
<hr />



@if (Model.Count() > 0)
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>DESCRIÇÃO</th>
				<th>CATEGORIA</th>
				<th>AVALIAÇÃO</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.id</td>
					<td>@item.descricao</td>
					<td>@item.categoria</td>
					<td>@item.avaliacao</td>
					<td>
						<a asp-action="UpdateItem" asp-route-id="@item.id" asp-route-categoria="@item.categoria">Alterar</a> |
						<a asp-action="RemoveItem" asp-route-id="@item.id" asp-route-categoria="@item.categoria">Remover</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-warning">
		Nenhum item para exibição
	</div>
}
